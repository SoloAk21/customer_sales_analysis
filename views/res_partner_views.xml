<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_sales_analysis" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.sales.analysis</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="%(action_report_sales_analysis)d"
                        type="action"
                        string="Print Sales Analysis"
                        class="oe_stat_button"
                        icon="fa-file-pdf-o"/>
            </xpath>
        </field>
    </record>
</odoo>
