<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sales_analysis">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="partner">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Sales Analysis for <t t-esc="partner.name"/></h2>
                        <p>Total Sales: <span t-esc="total_sales" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></p>
                        <h3>Products Purchased</h3>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="report_lines">
                                    <t t-foreach="report_lines" t-as="line">
                                        <tr>
                                            <td><t t-esc="line['category']"/></td>
                                            <td colspan="3">
                                                <table class="table table-sm">
                                                    <t t-foreach="line['products']" t-as="product">
                                                        <tr>
                                                            <td><t t-esc="product['name']"/></td>
                                                            <td><t t-esc="product['quantity']"/></td>
                                                            <td><span t-esc="product['total']" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></td>
                                                        </tr>
                                                    </t>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="3"><strong>Category Total</strong></td>
                                            <td><span t-esc="line['category_total']" t-options="{'widget': 'monetary', 'display_currency': currency_id}"/></td>
                                        </tr>
                                    </t>
                                </t>
                                <t t-else="">
                                    <tr>
                                        <td colspan="4">No sales data available for this customer.</td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>